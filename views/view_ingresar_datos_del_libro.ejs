<!-- 
    The "view_ingresar_datos_del_libro.ejs"
    The main view for creating a new book is very similar to the coded view for updating a record. Like it, it uses the partial view "_editor.ejs" for the different input fields.
-->
<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>view_ingresar_datos_del_libro.ejs</title>
    <%- include("_stylesheet") -%>
</head>
<body>
    <div class="container">
        <%- include("_navbar") -%>
        <h1>Ingresar datos del libro - view_ingresar_datos_del_libro.ejs </h1>

        <form action="/crear_un_libro" method="post">
            <div class="form-horizontal">

                <%- include("_datos_del_libro") -%>

                <div class="form-group row mt-3 mb-3">
                    <label class="col-form-label col-sm-2"></label>
                        <div class="col-sm-10">
                            <input type="submit" value="Crear un libro en SEQUELIZE" class="btn btn-default btn-success" />
                            <a class="btn btn-outline-dark cancel" href="/listar_libros">Cancelar</a>
                        </div>
                </div>
            </div>
        </form>

        <%- include("_footer") -%>
    </div>
</body>
</html>